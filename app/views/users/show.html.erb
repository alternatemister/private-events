<h1> <%= @user.name %>'s events</h1>

<h2>Upcoming Events</h2>
<ul>
  <% @user.attended_events.where('date >= ?', Date.today).order(:date).each do |event| %>
    <li>
      <%= link_to event.name, event_path(event) %>
      (<%= event.date %>)
    </li>
  <% end %>
</ul>

<h2>Past Events</h2>
<ul>
  <% @user.attended_events.where('date < ?', Date.today).order(date: :desc).each do |event| %>
    <li>
      <%= link_to event.name, event_path(event) %>
      (<%= event.date %>)
    </li>
  <% end %>
</ul>



